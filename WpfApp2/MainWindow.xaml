<Window x:Class="SumOfMultiples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sum of Multiples of 7" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10">
            <TextBox x:Name="InputTextBox" Text=""  
                     ToolTip="Введите числа через запятую" Margin="0,0,0,10"/>
            <Button Content="Вычислить" Click="CalculateButton_Click" Margin="0,10,0,0"/>
            <TextBlock x:Name="ResultTextBlock" Text="Результат:" FontWeight="Bold" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>